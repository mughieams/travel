<?xml version="1.0"?>
<odoo>
	<data>
	
		<!-- Halaman Order -->
		<template id="order">
			<t t-call="website.layout">
                <t t-set="title">Travel</t>
                <div class="oe_structure">
					<div class="container">
						<div class="row">
							<h1>Travel Order</h1>
						</div>
						<div class="row">
				
							<div>
								<h3>Account Information</h3>
							
								<div class="panel-body">
									<p>Name		: <t t-esc="partner.name"/></p>
									<p>Email	: <t t-esc="partner.email"/></p>
									<p>Phone	: <t t-esc="partner.phone"/></p>
									<p>Mobile	: <t t-esc="partner.mobile"/></p>
								</div>
							</div>
							<div>
					
								<h3>Order Information</h3>
								<table class="table table-bordered">
									<thead>
										<tr>
											<th class="col-md-1">No</th>
											<th class="col-md-5">Departure</th>
											<th class="col-md-5">Destination</th>
											<th class="col-md-4">Departure Date</th>
											<th class="col-md-3">Departure Time</th>
											<th class="col-md-2">State</th>
											<th class="col-md-3">Vehicle</th>
											<th class="col-md-3">Seat Number</th>
										</tr>
									</thead>
									<tbody>
										<t t-set="i" t-value="0"/>
										<t t-foreach="travels" t-as="travel">
											<t t-set="i" t-value="i+1"/>
											<tr>
												<td> <span t-esc="i"/> </td>
												<td>
													<ul>
														<t t-esc="travel.departure.city"/><br/>
														<t t-esc="travel.departure.address"/>
													</ul>
												</td>
												<td>
													<ul>
														<t t-esc="travel.destination.city"/><br/>
														<t t-esc="travel.destination.address"/>
													</ul>
												</td>
												<td><t t-esc="travel.departure_date"/></td>
												<td><t t-esc="travel.departure_time"/></td>
												<td><t t-esc="travel.state"/></td>
												<td><t t-esc="travel.vehicle"/></td>
												<td>
													<t t-foreach="tree_seat_number" t-as="seat">
														<t t-esc="seat.seat_number"/>
													</t>
												</td>
											</tr>
										</t>
									</tbody>
								</table>
							</div>
						</div>
					</div>
                </div>
            </t>
		</template>
			
	</data>
</odoo>