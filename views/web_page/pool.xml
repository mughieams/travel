<?xml version="1.0"?>
<odoo>
	<data>

		<!-- Halaman List Pool -->
		<template id="pool">
			<t t-call="website.layout">
                <t t-set="title">Travel</t>
                <div class="oe_structure">
					<div class="container">
						<br/>
						<div class="col-md-8 col-md-offset-2">
						
							<div class="panel panel-default o_panel s_panel">
								<div class="panel-heading ">
									<h3 class="panel-title o_default_snippet_text">Travel Pools</h3>
								</div>
								<div class="panel-body">

									<table class="table table-bordered">
										<thead>
											<tr>
												<th class="col-md-1">No</th>
												<th class="col-md-6">City</th>
												<th class="col-md-8">Address</th>
											</tr>
										</thead>
										<tbody>
											<t t-set="i" t-value="0"/>
											<t t-foreach="pools" t-as="pool">
												<t t-set="i" t-value="i+1"/>
												<tr>
													<td> <span t-esc="i"/> </td>
													<td><t t-esc="pool.city"/></td>
													<td><t t-esc="pool.address"/></td>
												</tr>
											</t>
										</tbody>
									</table>
								</div>
							</div>
						
						</div>
                    </div>
                </div>
            </t>
		</template>
			
	</data>
</odoo>