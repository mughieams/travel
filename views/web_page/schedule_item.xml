<?xml version="1.0"?>
<odoo>
	<data>
		
		<!-- Halaman List Pool -->
		<template id="schedule-item">
			<t t-call="website.layout">
				<t t-set="title">Order Schedule</t>
				<div class="oe_structure">
					<div class="jumbotron text-center">
						<h1>Order Seat</h1>
					</div>
					<div class="container">
						<br/>
						<div class="row">
						
							<div>
								<h3 class="text-center">Account Information</h3>
								<div>
									<table class="table borderless">
										<tr>
											<td>Name</td>
											<td><t t-esc="partner.name"/></td>
										</tr>
										<tr>
											<td>Email</td> 
											<td><t t-esc="partner.email"/></td>
										</tr>
										<tr>
											<td>Phone</td>
											<td><t t-esc="partner.phone"/></td>
										</tr>
										<tr>
											<td>Mobile</td>
											<td><t t-esc="partner.mobile"/></td>
										</tr>
									</table>
								</div>
							</div>
						
							<div>
								<h3 class="text-center">Schedule Information</h3>
								<div>
									<table class="table borderless">
										<tr>
											<td>Departure</td>
											<td><t t-esc="schedule.departure.city"/></td>
										</tr>
										<tr>
											<td>Destination</td> 
											<td><t t-esc="schedule.destination.city"/></td>
										</tr>
										<tr>
											<td>Departure Date</td>
											<td><t t-esc="schedule.departure_date"/></td>
										</tr>
										<tr>
											<td>Departure Time</td>
											<td><t t-esc="schedule.departure_time"/></td>
										</tr>
										<tr>
											<td>Pool</td>
											<td>
												<ul class="list-unstyled">
													<t t-foreach="schedule.pool_list" t-as="schedule_item">
														<li><t t-esc="schedule_item.name"/></li>
													</t>
												</ul>
											</td>
										</tr>
									</table>
								</div>
								
							</div>
							
							<div>
								<h3 class="text-center">Vehicle Information</h3>
								<div>
									<table class="table borderless">
										<tr>
											<td>Vehicle Name</td>
											<td><t t-esc="schedule.vehicle.name"/></td>
										</tr>
										<tr>
											<td>Seats</td>
											<td><t t-esc="schedule.vehicle.seats"/></td>
										</tr>
									</table>
								</div>
								
							</div>
							
							<div>
								<h3 class="text-center">Booking</h3>
								<form method="post" class="s_website_form" action="/website_form/" data-model_name="travel.order" data-success_page="/travel/orders/pay/">

									<input type="hidden" name="partner_id" class="o_website_from_input" t-att-value="partner.id"/>
									<input type="hidden" name="departure.schedule" class="o_website_from_input" t-att-value="schedule.id"/>
	
									<div class="form-group">
										<label for="sel1">Pool Departure:</label>	
										<select name="departure.pool_location" class="o_website_from_input form-control" id="sel1">
											<t t-foreach="schedule.departure.pools" t-as="schedule_item">
												<option t-att-value="schedule_item.id">
													<t t-esc="schedule_item.address" />
												</option>
											</t>
										</select>
									</div>
																				
									<input type="hidden" name="destination.schedule" class="o_website_from_input" t-att-value="schedule.id"/>
									
									<div class="form-group">
										<label for="sel2">Pool Destination:</label>
										<select name="destination.pool_location" class="o_website_from_input form-control" id="sel2">
											<t t-foreach="schedule.destination.pools" t-as="schedule_item">
												<option t-att-value="schedule_item.id">
													<t t-esc="schedule_item.address" />
												</option>
											</t>
										</select>
									</div>

									<input type="hidden" name="departure_date" class="o_website_from_input" t-att-value="schedule.departure_date"/>
									
									<input type="hidden" id="departure_time" class="o_website_from_input" name="departure_time" t-att-value="schedule.departure_time"/>
										
									<input type="hidden" name="schedule_id" class="o_website_from_input" t-att-value="schedule.id"/>

									<div class="form-group">
										<label for="seats">Seats</label>
										<input type="text" id="seats" class="o_website_from_input form-control" name="tree_seat_number[]"/>
									</div>
						
									<button type="submit" class="o_website_form_send btn btn-default btn-lg">Order</button>
									
									<div id="o_website_form_result">
									
									</div>
									
									<br/><br/>
									
								</form>
								
							</div>
						</div>
					</div>
				</div>
			</t>
		</template>
			
	</data>
</odoo>