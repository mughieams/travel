<?xml version="1.0"?>
<odoo>
	<data>
		
		<!-- Halaman List Pool -->
		<template id="schedule-item">
			<t t-call="website.layout">
				<t t-set="title">Order Schedule</t>
				<div class="oe_structure">
					<div class="jumbotron text-center">
						<h1>Order Seat</h1>
					</div>
					<div class="container">
						<br/>
						<div class="row">
						
							<div>
								<h3 class="text-center">Account Information</h3>
								<div>
									<table class="table borderless">
										<tr>
											<td>Name</td>
											<td><t t-esc="partner.name"/></td>
										</tr>
										<tr>
											<td>Email</td> 
											<td><t t-esc="partner.email"/></td>
										</tr>
										<tr>
											<td>Phone</td>
											<td><t t-esc="partner.phone"/></td>
										</tr>
										<tr>
											<td>Mobile</td>
											<td><t t-esc="partner.mobile"/></td>
										</tr>
									</table>
								</div>
							</div>
						
							<div>
								<h3 class="text-center">Schedule Information</h3>
								<div>
									<table class="table borderless">
										<tr>
											<td>Price per Seat</td>
											<td><t t-esc="schedule.price"/></td>
										</tr>
										<tr>
											<td>Departure</td>
											<td><t t-esc="schedule.departure.city"/></td>
										</tr>
										<tr>
											<td>Destination</td> 
											<td><t t-esc="schedule.destination.city"/></td>
										</tr>
										<tr>
											<td>Departure Date</td>
											<td><t t-esc="schedule.departure_date"/></td>
										</tr>
										<tr>
											<td>Departure Pool</td>
											<td>
												<ul class="list-unstyled">
													<t t-foreach="schedule.pool_list_dep" t-as="schedule_item">
														<li><t t-esc="schedule_item.name"/> At <t t-esc="schedule_item.departure_perpool"/></li>
													</t>
												</ul>
											</td>
										</tr>
										<tr>
											<td>Destination Pool</td>
											<td>
												<ul class="list-unstyled">
													<t t-foreach="schedule.pool_list_dest" t-as="schedule_item">
														<li><t t-esc="schedule_item.name"/> At <t t-esc="schedule_item.departure_perpool"/></li>
													</t>
												</ul>
											</td>
										</tr>
									</table>
								</div>
								
							</div>
							
							<div>
								<h3 class="text-center">Vehicle Information</h3>
								<div>
									<table class="table borderless">
										<tr>
											<td>Vehicle Name</td>
											<td><t t-esc="schedule.vehicle.name"/></td>
										</tr>
										<tr>
											<td>Seats</td>
											<td><t t-esc="schedule.vehicle.seats"/></td>
										</tr>
									</table>
								</div>
								
							</div>
							
							<div>
								<h3 class="text-center">Booking</h3>
								<form method="post" action="pay/">
									
									<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
									
									<div class="form-group">
										<label for="sel1">Pool Departure:</label>	
										<select name="departure" class="form-control" id="sel1">
											<t t-foreach="schedule.pool_list_dep" t-as="schedule_item">
												<option t-att-value="schedule_item.id">
													<t t-esc="schedule_item.name" />
												</option>
											</t>
										</select>
									</div>
									
									<div class="form-group">
										<label for="sel2">Pool Destination:</label>
										<select name="destination" class="form-control" id="sel2">
											<t t-foreach="schedule.pool_list_dest" t-as="schedule_item">
												<option t-att-value="schedule_item.id">
													<t t-esc="schedule_item.name" />
												</option>
											</t>
										</select>
									</div>

									<div class="form-group">
										<label for="seats">Seats (e.g : 2,3)</label>
										<input type="text" id="seats" class="form-control" name="seats"/>
									</div>
						
									<button type="submit" class="btn btn-default btn-lg">Order</button>
									
									<br/><br/>
									
								</form>
								
							</div>
						</div>
					</div>
				</div>
			</t>
		</template>
			
	</data>
</odoo>