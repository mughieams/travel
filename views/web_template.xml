<?xml version="1.0"?>
<odoo>
	<data>
	
		<!-- Assets untuk FrontEnd -->
		<template id="assets_frontend" inherit_id="website.assets_frontend" name="Shop">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/travel/static/src/css/style.css" />
				<script type="text/javascript" src="/travel/static/src/js/web.js"></script>
			</xpath>
		</template>
	
		<!-- Header -->
		<template id="header" inherit_id="website.layout" name="Header Travel">
			<xpath expr="//header//ul[@id='top_menu']/li" position="before">
				<li>
					<a href="/travel/home">
						<span data-oe-model="website.menu" data-oe-id="5" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Travel</span>
					</a>
				</li>
			</xpath>
		</template>
		
		<!-- Footer -->
		<template id="website.layout_footer_copyright" inherit_id="website.layout" name="Footer Copyright">
			<xpath expr="//footer" position="inside">
				<div class="container mt16 mb8">
					<div class="pull-right" t-ignore="true" t-if="not editable">
						<a>Pesan Travel Anda Sekarang!</a>
					</div>
					<div class="pull-left text-muted">
						Copyright &amp;copy; <span t-field="res_company.name">Kelompok IA</span>
					</div>
				</div>
			</xpath>
		</template>
		
		<!-- Halaman Tidak Ditemukan -->
		<template id="404">
			<t t-call="website.layout">
				<div id="wrap">
					<div class="oe_structure oe_empty">
						<div class="container">
							<h1>Error 404 Not Found</h1>
							<p>
								<a t-attf-href="/">Return to the Home.</a>
							</p>
						</div>
					</div>
				</div>
			</t>
		</template>
		
		<!-- Halaman Login -->
		<template id="login">
			<t t-call="website.layout">
                <t t-set="title">Travel</t>
                <div class="oe_structure">
					<div class="container">
					
						<h1>Please Login Before</h1>

					</div>
                </div>
            </t>
		</template>
			
		<!-- Halaman Utama -->
		<template id="home">
			<t t-call="website.layout">
                <t t-set="title">Travel</t>
                <div class="oe_structure">
					<div class="container">
					
						<h1>Travel Order</h1>

					</div>
                    
					<div class="container">
						<h2>Account Information</h2>
						<t t-foreach="partners" t-as="partner">
							<p>Name : <t t-esc="partner.name"/></p>
							<p>Email : <t t-esc="partner.email"/></p>
							<p>Phone : <t t-esc="partner.phone"/></p>
							<p>Mobile : <t t-esc="partner.mobile"/></p>
						</t>
                    </div>
					
					<div class="container">
						<h2>Order Information</h2>
						<table>
							<thead>
								<tr>
									<th>Departure</th>
									<th>Destination</th>
									<th>Departure Date</th>
									<th>Departure Time</th>
									<th>State</th>
									<th>Vehicle</th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="travels" t-as="travel">
									<tr>
										<td><t t-esc="travel.departure"/></td>
										<td><t t-esc="travel.destination"/></td>
										<td><t t-esc="travel.departure_date"/></td>
										<td><t t-esc="travel.departure_time"/></td>
										<td><t t-esc="travel.state"/></td>
										<td><t t-esc="travel.order"/></td>
									</tr>
								</t>
							</tbody>
						</table>
                    </div>
                </div>
            </t>
		</template>
			
	</data>
</odoo>